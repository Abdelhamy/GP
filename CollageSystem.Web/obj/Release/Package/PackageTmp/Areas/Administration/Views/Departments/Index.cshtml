@model IEnumerable<CollageSystem.Core.Department>

@{
    ViewBag.Title = "Index";
}

<h2>الأقسام</h2>

<p>
    <a onclick="CreateDepartments()" class="btn btn-success">
        <img src="~/Images/add.png" />

        <span style="font-family:'Amiri', serif; color:#fff" aria-hidden="true">
            أضافة قسم
        </span>
    </a>
</p>
<table class="table table-bordered table-condensed table-hover">
    <tr>
        <th>
            كود القسم
        </th>
        <th>
            أسم القسم

        </th>
        <th>
            رقم القسم
        </th>
        <th>
            طابق القسم
        </th>
        <th>
            رئيس القسم
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepFloorNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstName)  @Html.DisplayFor(modelItem => item.User.LastName)
            </td>

            <td>
                <a onclick="EditDepartments(@item.DepID)" class="btn btn-default">
                    <img src="~/Images/edit.png" />

                </a>
                |
                <a onclick="DeleteDepartments(@item.DepID)" class="btn btn-danger">
                    <img src="~/Images/delete.png" />

                </a>
            </td>

        </tr>
    }

</table>
<div class="modal fade" id="myModal1" dir="rtl">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <br />
            </div>
            <div id="myModalBodyDiv1">


            </div>


        </div>

    </div>

</div>
