                </a>
            </li>*@
            <li class="nav-item ">
                <a class="nav-link" href="@Url.Action("Index","StudentSemesters")">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>المواد الدراسيه</span>
                </a>
            @*</li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","Departments")">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>الأقسام</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","Instroctor")">
                    <i class="fas fa-fw fa-table"></i>
                    <span>الدكاتره</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","Student")">
                    <i class="fas fa-fw fa-table"></i>
                    <span>الطلاب</span>
                </a>
            </li>*@

        </ul>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p style="font-family:'Arabic Typesetting' ; font-size:large">&copy; @DateTime.Now.Year - مشروع تخرج دفعه 35 علوم بنها</p>
            </footer>
        </div>

    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


</body>


</html>
