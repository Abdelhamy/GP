@model CollageSystem.Core.CourseRef

@{
    ViewBag.Title = "Edit";
}

<h2>تعديل المتطلب</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table dir="rtl" class="table table-bordered table-condensed">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CRefID)
        <tr>
            <td>
                رمز المتطلب
            </td>
            <td>
                @Html.EditorFor(model => model.CRefSymbol, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CRefSymbol, "", new { @class = "text-danger" })
            </td>

        </tr>
        <tr>
            <td>
                معنى المتطلب

            </td>
            <td>
                @Html.EditorFor(model => model.SymbolMean, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SymbolMean, "", new { @class = "text-danger" })
            </td>
        </tr>
    </table>
    <div class="form-horizontal">

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="حفظ" class="btn btn-default" />
            </div>
        </div>
        <div>
            <a onclick="CoursesRef()" class="btn btn-info">
                <span style="font-family:'Amiri', serif; color:#fff" aria-hidden="true">
                    الرجوع لقائمة المتطلبات
                </span>
            </a>
        </div>

    </div>
}

