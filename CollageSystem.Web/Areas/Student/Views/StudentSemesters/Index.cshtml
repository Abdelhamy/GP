@model IEnumerable<CollageSystem.Core.Semester>

@{
    ViewBag.Title = "Index";
}
<div dir="rtl">
    <h2>التيرم</h2>
    <table class="table table-bordered table-condensed " dir="rtl">
        <tr>
            <th style="text-align: right">
                السنه
            <th style="text-align: right">
                الترم
            </th>
            <th>

            </th>
        </tr>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                if(item.Added)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Year)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SemNumber1.Desc)
                        </td>
                        <td>
                            @*@Html.ActionLink("تفاصيل التيرم", "DetailsOFTerm", new { SemID = item.SemID }, new { @class = "btn btn-info" })*@

                            @if(item.Editable)
                            {
                                @Html.ActionLink("أضافه وتعديل المواد", "AddOrDeleteCourses", new { SemID = item.SemID }, new { @class = "btn btn-default" })
                                @*<a onclick="SemSession(@item.SemID)" class="btn btn-default">
                                        <span>
                                            إضافة وتعديل المواد
                                        </span>
                                    </a>*@
                            }
                            else
                            {
                                @Html.ActionLink("نتيجه الترم", "DetailsOFTerm", new { semId = item.SemID }, new { @class = "btn btn-success" })

                            }

                        </td>
                    </tr>
                }
            }
        }
    </table>
</div>

<div class="modal fade" id="myModal1" dir="rtl">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <br />
            </div>
            <div id="myModalBodyDiv1">


            </div>


        </div>

    </div>

</div>